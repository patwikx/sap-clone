}

model OccupancyForecast {
  id          String    @id @default(cuid())
  date        DateTime
  roomTypeId  String
  forecasted  Int
  actual      Int?
  averageRate Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  @@unique([date, roomTypeId])
  @@map("OOCCUP")
}

// =================================================================
